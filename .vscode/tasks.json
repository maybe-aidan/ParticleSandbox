{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/*.c",
                "-I${workspaceFolder}/dependencies/include",
                "-L${workspaceFolder}/dependencies/lib",
                "-lglfw3dll",
                "-lopengl32",
                "-o",
                "${workspaceFolder}/build/ParticleSandbox"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated by VS Code"
        }
    ]
}